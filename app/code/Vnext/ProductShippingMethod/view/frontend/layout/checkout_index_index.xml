<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="shipping-total" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Vnext_ProductShippingMethod/js/view/checkout/cart/product/product-shipping-total</item>
                                                            <item name="sortOrder" xsi:type="string">20</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Vnext_ProductShippingMethod/checkout/cart/product/product-shipping-total</item>
                                                                <item name="title" xsi:type="string" translate="true">Product Shipping Fee</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>

                                                <item name="cart_items" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="details" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Vnext_ProductShippingMethod/js/view/summary/item/details</item>
                                                            <item name="sortOrder" xsi:type="string">0</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Vnext_ProductShippingMethod/summary/item/details</item>
<!--                                                                <item name="title" xsi:type="string" translate="true">Shipping Fee:</item>-->
                                                            </item>

                                                            <item name="subtotal" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Magento_Tax/js/view/checkout/summary/item/details/subtotal</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>

                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
